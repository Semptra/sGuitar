             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sGuitar.UI.Views"
             xmlns:reactiveUi="http://reactiveui.net"
             xmlns:controls="clr-namespace:sGuitar.UI.Controls"
             xmlns:views="clr-namespace:sGuitar.UI.Views"
             xmlns:vms="clr-namespace:sGuitar.UI.ViewModels"
             mc:Ignorable="d"
             Width="1600" Height="800">
