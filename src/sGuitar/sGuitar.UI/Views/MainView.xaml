        <Image Source="pack://application:,,,/Resources/Images/guitar_neck_2.png"></Image>
        <Button Margin="1068,347,449,436" RenderTransformOrigin="0.5,0.5" Opacity="0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
